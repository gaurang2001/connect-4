<!doctype html>
<html lang="en">

<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">

  <title>Home | Connect 4</title>

  <link rel="icon" type="image/png" href="/favicon.png" />

  <!-- Bootstrap CSS -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta2/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-BmbxuPwQa2lc/FVzBcNJ7UAyJxM6wuqIj61tLrc4wSX0szH/Ev+nYRRuWlolflfl" crossorigin="anonymous">
  <link rel="stylesheet" href="/CSS/index.css">
</head>

<body style="background:url(/media/bg.jpg) !important; background-size:cover !important;">
  <%- include("partials/navbar") %>
  <%- include("partials/alerts") %>


    <div class="container-fluid p-5 md-5">
      <div class="row text-center mt-5">
        <div class="col-md-6"><a href="#" class="btn btn-danger btn-lg btn-block text-white">GIF</a></div>
        <div class="col-md-6" style="">
          <a href="/play" class="btn btn-success btn-lg btn-block w-50 start-btn p-4">New Game</a>
          <br><br>
          <p><strong>OR</strong></p><br>
          <button type="button" class="btn btn-primary btn-lg btn-block w-50 start-btn p-4" data-bs-toggle="modal"
            data-bs-target="#exampleModal">Join Game</button>
        </div>
      </div>


      <!-- Modal -->
      <div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog">
          <div class="modal-content">
            <div class="modal-header">
              <h5 class="modal-title" id="exampleModalLabel">Enter Room ID</h5>
              <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
              <input type="text" name="rname" id="rname" class="form-control" />
              <div id="rnamevalidation" style="color: #DC143C; font-size: 15px;"></div>
            </div>
            <div class="modal-footer">
              <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
              <button type="button" class="btn btn-primary"
                onclick="rnamevalidation(document.getElementById('rname'))">Proceed</button>
            </div>
          </div>
        </div>
      </div>

      <script>
        function rnamevalidation(field) {
          var rname = field.value;
          var pass_msg = document.getElementById("rnamevalidation");
          if (rname === "") {
            pass_msg.innerText = "Roomname is required.";
            return false;
          }
          else if (rname.match("[A-Za-z0-9]{6}$") === null) {
            pass_msg.innerText = "Invalid Room Name!";
            return false;
          }
          else {
            pass_msg.innerText = "";
            window.location.href="/play/"+rname;
          }

        }
      </script>

      <div class="container p-5 mt-5 md-5" style="background: #EBEDEF ; border-radius: 5px; box-shadow: 0 40px 50px;">
        <!-- //<div class="container mt-5"> -->
        <h1><strong>Leaderboard</strong></h1>
        <br>
        <!-- </div> -->
        <table class="table table-striped">
          <tr>
            <th scope="col">Rank</th>
            <th scope="col">Username</th>
            <th scope="col">Wins</th>
          </tr>

          <% leaderboard.forEach(function(member,i){ %>
            <tr scope="row">
              <% if(member.email==current_user.email) {%>
                <th class="bg-info">
                  <%= ++i %>
                </th>
                <th class="bg-info">
                  <%= current_user.username %>
                </th>
                <th class="bg-info">
                  <%= current_user.wins %>
                </th>
                <% }else { %>

                  <td>
                    <%= ++i %>
                  </td>
                  <td>
                    <%= member.username %>
                  </td>
                  <td>
                    <%= member.wins %>
                  </td>
            </tr>
            <% }}) %>

        </table>
      </div>
    </div>
    </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.6.0/dist/umd/popper.min.js"
      integrity="sha384-KsvD1yqQ1/1+IA7gi3P0tyJcT3vR+NdBTt13hSJ2lnve8agRGXTTyNaBYmCR/Nwi"
      crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta2/dist/js/bootstrap.min.js"
      integrity="sha384-nsg8ua9HAw1y0W1btsyWgBklPnCUAFLuTMS2G72MMONqmOymq585AcH49TLBQObG"
      crossorigin="anonymous"></script>
</body>

</html>