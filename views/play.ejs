<!doctype html>
<html lang="en">

<head>
  <%- include("partials/head") %>
  <link rel="stylesheet" href="/CSS/game.css" />
</head>

<body
  style="background:url(/media/bg.jpg) !important; background-size:cover !important; background-attachment: fixed !important;">
  <nav class="navbar navbar-expand-lg" style="background: transparent !important;">
    <div class="container-fluid">
      <ul class="navbar-nav mx-auto mb-2 mb-lg-0">
        <li class="nav-item">
          <a class="nav-link" href="/"><img src="/media/logo.png" height="100"></a>
        </li>
      </ul>
    </div>
  </nav>

  <%- include("partials/alerts") %>

  <div class="game">
    <div class="your_color"></div>
    <div class="opponent_color"></div>
    <div class="board">
      <img src="/media/board.svg" class="overlay">
      <div class="cols">
        <div class="col" id="col_1" data-in-col="0"></div>
        <div class="col" id="col_2" data-in-col="0"></div>
        <div class="col" id="col_3" data-in-col="0"></div>
        <div class="col" id="col_4" data-in-col="0"></div>
        <div class="col" id="col_5" data-in-col="0"></div>
        <div class="col" id="col_6" data-in-col="0"></div>
        <div class="col" id="col_7" data-in-col="0"></div>
      </div>
    </div>
    <div class="status">Your turn!</div>
  </div>

  <!-- Modal -->
  <div class="modal fade" id="Modal" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1"
    aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
      <div class="modal-content">
        <div id="header-bg" class="modal-header">
          <h5 class="modal-title" id="popover-title"></h5>
        </div>
        <div class="modal-body">
          <p id="popover-info"></p>
          <div class="inputs_url">
            <div class="input-group">
              <input type="text" class="share_url form-control" value="" readonly data-toggle="tooltip"
                data-placement="top" title="Copy URL" id="url-placeholder">
              <div class="input-group-append">
                <button class="btn btn-outline-secondary" type="button" id="copy-url" readonly data-toggle="tooltip"
                  data-placement="top" title="Copy URL"><i class="fa fa-clipboard"></i></button>
              </div>
            </div>
            <div class="input-group">
              <input type="text" class="share_url form-control" value="" readonly data-toggle="tooltip"
                data-placement="top" title="Copy Room ID" id="room-placeholder">
              <div class="input-group-append">
                <button class="btn btn-outline-secondary" type="button" id="copy-room" readonly data-toggle="tooltip"
                  data-placement="top" title="Copy Room ID"><i class="fa fa-clipboard"></i></button>
              </div>
            </div>
          </div>
          <div class="redirect-buttons">
            <div class="row text-center">
              <div class="input button-group">
                <a href="/" class="btn btn-info">Go Home</a>
                <a href="/play" class="btn btn-primary">Play New Game</a>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

  <script src="https://code.jquery.com/jquery-latest.min.js" type="text/javascript"></script>
  <script src="/socket.io/socket.io.js" type="text/javascript"></script>
  <script>
    var user_email = "<%= current_user.email %>";
    var user_name = "<%= current_user.username %>";
  </script>
  <script src="/JS/script.js" type="text/javascript"></script>

  <div class="container-fluid fixed-bottom">
    <div class="row">
      <div class="col-md-6 col-sm-6 col-xs-6" id="left">
        <div class="custom-card custom-left text-center" style="background: #C0392B; color: white">
          Player 1: <strong><span id="player1"></span></strong>
        </div>
      </div>
      <div class="col-md-6 col-sm-6 col-xs-6" id="right">
        <div class="custom-card custom-right text-center" style="background: #154360 ; color: white;">
          Player 2: <strong><span id="player2"></span></strong>
        </div>
      </div>
    </div>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.6.0/dist/umd/popper.min.js"
    integrity="sha384-KsvD1yqQ1/1+IA7gi3P0tyJcT3vR+NdBTt13hSJ2lnve8agRGXTTyNaBYmCR/Nwi"
    crossorigin="anonymous"></script>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta2/dist/js/bootstrap.min.js"
    integrity="sha384-nsg8ua9HAw1y0W1btsyWgBklPnCUAFLuTMS2G72MMONqmOymq585AcH49TLBQObG"
    crossorigin="anonymous"></script>
</body>

</html>