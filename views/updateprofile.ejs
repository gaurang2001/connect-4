<!doctype html>
<html lang="en">

<head>

  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">

  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta3/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-eOJMYsd53ii+scO/bJGFsiCZc+5NDVN2yr8+0RDqr0Ql0h+rP48ckxlpbzKgwra6" crossorigin="anonymous">

  <script type="text/javascript" src="/JS/register.js"></script>

  <title>Profile | Connect 4</title>
</head>

<body
  style="background:url(/media/bg.jpg) !important; background-size:cover !important; background-attachment: fixed !important;">
  <%- include("partials/navbar") %>
    <%- include("partials/alerts") %>

      <div class="container p-5 mt-5 md-5"
        style="background: #EBEDEF ; border-radius: 5px; box-shadow: 0 40px 50px; background-attachment: fixed !important;">
        <div class="container mt-5">
          <h1>Update Profile</h1>
          <br>
          <form method="POST" action="/updateprofile" autocomplete="off"  onsubmit="return checkupdate(this)">
            <input name="email" type="hidden" value="<%= current_user.email %>">
            <div class="mb-3">
              <label for="email" class="form-label"><b> Email Address </b></label>
              <input name="" type="email" class="form-control" placeholder="Enter email ID" id="email" disabled="true"
                value="<%= current_user.email %>">
            </div>
            <div class="mb-3">
              <label for="username" class="form-label"><b>Username</b></label>
              <input name="username" type="username" class="form-control" placeholder="Enter new username" id="username"
                value="<%= current_user.username %>" onfocusout="updateusernamevalidation(this)" />
                <div id="unamevalidation" style="color: #DC143C; font-size: 15px;"></div>
            </div>
            <div class="mb-3">
              <label for="password" class="form-label"><b> Password</b></label>
              <input name="password" type="password" class="form-control" placeholder="Enter new password"
                id="password" onfocusout="updatepasswordvalidation(this)" />
                <div id="pwdcheck" style="color: #DC143C; font-size: 15px;"></div>
            </div>
            <br>
            <div class="row">
              <div class="col-sm-12 text-center">
                <button class="btn btn-primary btn-md">Submit</button>
                <a href="/" class="btn btn-danger btn-md">Cancel</a>
              </div>
            </div>

          </form>
        </div>
      </div>

      <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta3/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-JEW9xMcG8R+pH31jmWH6WWP0WintQrMb4s7ZOdauHnUtxwoG2vI5DkLtS3qm9Ekf"
        crossorigin="anonymous"></script>



</body>

</html>