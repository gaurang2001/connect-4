<!doctype html>
<html lang="en">

<head>

  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">

  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta3/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-eOJMYsd53ii+scO/bJGFsiCZc+5NDVN2yr8+0RDqr0Ql0h+rP48ckxlpbzKgwra6" crossorigin="anonymous">

  <title>Profile | Connect 4</title>
</head>

<body>
  <%- include("partials/navbar") %>
  <%- include("partials/alerts") %>

  <div class="container mt-5">
    <h1>Update Profile</h1>
    <form method="POST" action="/updateprofile" autocomplete="off">
      <input name="email" type="hidden" value="<%= current_user.email %>">
      <div class="mb-3">
        <label for="email" class="form-label">Email Address</label>
        <input name="" type="email" class="form-control" placeholder="Enter email ID" id="email" disabled="true"
          value="<%= current_user.email %>">
      </div>
      <div class="mb-3">
        <label for="username" class="form-label">Username</label>
        <input name="username" type="username" class="form-control" placeholder="Enter new username" id="username"
        value="<%= current_user.username %>">
      </div>
      <div class="mb-3">
        <label for="password" class="form-label">New Password</label>
        <input name="password" type="password" class="form-control" placeholder="Enter new password" id="password">
      </div>
      <button type="submit" class="btn btn-primary">Update Profile </button>
    </form>
  </div>


  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta3/dist/js/bootstrap.bundle.min.js"
    integrity="sha384-JEW9xMcG8R+pH31jmWH6WWP0WintQrMb4s7ZOdauHnUtxwoG2vI5DkLtS3qm9Ekf"
    crossorigin="anonymous"></script>



</body>

</html>